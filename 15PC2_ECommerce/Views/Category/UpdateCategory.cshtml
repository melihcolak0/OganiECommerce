@model UpdateCategoryDTO

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<h5 class="mb-0 text-center" text-center>Kategoriler</h5>
<hr />
<div class="row">
    <div class="col-xl-6 mx-auto">
        <div class="card">
            <div class="card-body">
                <div class="border p-3 rounded">
                    <h6 class="mb-0 text-center">Kategori Güncelle</h6>
                    <hr />
                    <form method="post" class="row g-3">
                        <input type="hidden" class="form-control" asp-for="CategoryId">
                        <div class="col-12">
                            <label class="form-label">Kategori Adı</label>
                            <input type="text" class="form-control" asp-for="CategoryName">
                        </div>                        
                        <div class="d-flex justify-content-between">
                            <a href="/Category/Index" class="btn btn-secondary px-5 radius-30 btn-sm">
                                <i class="bi bi-arrow-left"></i> Geri
                            </a>
                            <button type="submit" class="btn btn-primary px-5 radius-30 btn-sm">
                                <i class="bi bi-save"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
