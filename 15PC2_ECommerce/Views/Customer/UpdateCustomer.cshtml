@model UpdateCustomerDTO

@{
    ViewData["Title"] = "UpdateCustomer";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<h5 class="mb-0 text-center">Müşteriler</h5>
<hr />
<div class="row">
    <div class="col-xl-6 mx-auto">
        <div class="card">
            <div class="card-body">
                <div class="border p-3 rounded">
                    <h6 class="mb-0 text-center">Müşteri Güncelle</h6>
                    <hr />
                    <form method="post" class="row g-3">
                        <input type="hidden" class="form-control" asp-for="CustomerId">
                        <div class="col-12">
                            <label class="form-label">Adı</label>
                            <input type="text" class="form-control" asp-for="Name">
                        </div>
                        <div class="col-12">
                            <label class="form-label">Soyadı</label>
                            <input type="text" class="form-control" asp-for="Surname">
                        </div>
                        <div class="col-12">
                            <label class="form-label">E-Mail</label>
                            <input type="email" class="form-control" asp-for="Email">
                        </div>
                        <div class="col-12">
                            <label class="form-label">Telefon Numarası</label>
                            <input type="text" class="form-control" asp-for="Phone">
                        </div>
                        <div class="col-12">
                            <label class="form-label">Cinsiyet</label>
                            <input type="text" class="form-control" asp-for="Gender">
                        </div>
                        <div class="col-12">
                            <label class="form-label">Yaş</label>
                            <input type="number" class="form-control" asp-for="Age">
                        </div>
                        <div class="col-12">
                            <label class="form-label">Şehir</label>
                            <input type="text" class="form-control" asp-for="City">
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="/Customer/Index" class="btn btn-secondary px-5 radius-30 btn-sm">
                                <i class="bi bi-arrow-left"></i> Geri
                            </a>
                            <button type="submit" class="btn btn-primary px-5 radius-30 btn-sm">
                                <i class="bi bi-save"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
